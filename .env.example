# ===========================================
# DESAFÍO DUNAS DE NAZCA - ENVIRONMENT VARIABLES
# ===========================================

# Entorno de aplicación
NODE_ENV=development
PORT=3000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/desafio-dunas-nazca
# Para MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/desafio-dunas-nazca?retryWrites=true&w=majority

# Seguridad
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui_cambialo
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# CORS - Orígenes permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,https://desafiodunasnazca.com

# Usuario administrador por defecto
DEFAULT_ADMIN_EMAIL=admin@desafiodunasnazca.com
DEFAULT_ADMIN_PASSWORD=admin123456

# Configuración de email (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
FROM_EMAIL=noreply@desafiodunasnazca.com
FROM_NAME=Desafío Dunas de Nazca

# Configuración de almacenamiento de archivos
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Configuración de AWS S3 (opcional)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=desafio-dunas-nazca-files

# Configuración de Cloudinary (opcional para imágenes)
CLOUDINARY_CLOUD_NAME=tu_cloud_name
CLOUDINARY_API_KEY=tu_api_key
CLOUDINARY_API_SECRET=tu_api_secret

# Configuración de pagos (opcional)
CULQI_PUBLIC_KEY=pk_test_tu_culqi_public_key
CULQI_SECRET_KEY=sk_test_tu_culqi_secret_key

# PayPal (opcional)
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_CLIENT_SECRET=tu_paypal_client_secret
PAYPAL_MODE=sandbox

# WhatsApp API (opcional para notificaciones)
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_TOKEN=tu_whatsapp_token
WHATSAPP_PHONE_ID=tu_phone_id

# SMS API (opcional)
SMS_API_KEY=tu_sms_api_key
SMS_API_URL=https://api.sms-provider.com

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de caché Redis (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=tu_redis_password

# Configuración de sesiones
SESSION_SECRET=tu_session_secret_muy_seguro
SESSION_NAME=desafio-dunas-session
SESSION_MAX_AGE=86400000

# Google Analytics (opcional)
GA_TRACKING_ID=UA-123456789-1

# Facebook Pixel (opcional)
FB_PIXEL_ID=123456789012345

# Configuración de backup automático
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# URLs externas
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Configuración de notificaciones push (opcional)
VAPID_PUBLIC_KEY=tu_vapid_public_key
VAPID_PRIVATE_KEY=tu_vapid_private_key
VAPID_EMAIL=mailto:admin@desafiodunasnazca.com

# Configuración de monitoreo (opcional)
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto
NEW_RELIC_LICENSE_KEY=tu_new_relic_license_key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_REGISTRATION_MAX=5

# Configuración de desarrollo
DEBUG=true
ENABLE_CORS=true
TRUST_PROXY=false